{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    <section class="gh-pagehead">
        <header class="gh-pagehead-content">
            <h1 class="gh-pagehead-title">Archive</h1>

            <div class="gh-pagehead-description">
                {{#if description}}
                    {{description}}
                {{else}}
                    A collection of {{plural pagination.total empty="0 issues" singular="% issue" plural="% issues"}}
                {{/if}}
            </div>
        </header>
    </section>

    <div class="gh-feed">
        {{#match pagination.page 2}}
            {{#get "posts" limit=@config.posts_per_page as |recent|}}
                {{#foreach recent}}
                    {{> "loop"}}
                {{/foreach}}
            {{/get}}
        {{/match}}
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>
</main>